# Server Configuration
PORT=3000
HOST=0.0.0.0
WEBHOOK_SECRET=your-webhook-secret-key

# Moodle Configuration (Required)
MOODLE_BASE_URL=https://your-moodle-site.com
MOODLE_TOKEN=your-moodle-webservice-token

# RabbitMQ Configuration (Optional - for queue processing)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=webhook-events
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=5000
RABBITMQ_ENABLED=true

# Processing Configuration
# Options: 'direct', 'queue', 'hybrid'
# - direct: Process events immediately
# - queue: Send events to RabbitMQ for async processing
# - hybrid: Try queue first, fallback to direct (recommended)
PROCESSING_MODE=hybrid
ENABLE_QUEUE=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
ENABLE_ANALYTICS=true

# Legacy support (for backward compatibility)
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook
MOODLE_URL=https://your-moodle-site.com
